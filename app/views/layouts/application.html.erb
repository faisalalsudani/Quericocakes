<!DOCTYPE html>
<html>
  <head>
    <title>Que Rico Cakes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <% if notice %>
      <div class="alert alert-info" role="alert"><%= notice %></div>
      <% end %>
      
      <% if alert %>
      <div class="alert alert-info" role="alert"><%= alert %></div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
