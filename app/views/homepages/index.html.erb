<script>
  function showNews(id){
    document.getElementById(`news${id}`).style.display = "block";
    document.getElementById(`block${id}`).classList.add('d-flex');
  }

  function closeNews(id){
    document.getElementById(`news${id}`).style.display = "none";
    document.getElementById(`block${id}`).classList.remove('d-flex');
  }
</script>


<section class="featured" style="margin-top:50px">
  <h2>Featured in the media</h2>
  <% @posts = Post.all %>
  <div class="container">
    <div class="row">
      <% @posts.each do |post| %>

        <div class="col-md-4">
          <div class="post">
            <img class="card-img-top" src="<%= post.picture %>" alt="Card image cap" style="width:100%; height:200px;">
            <h4 class="card-title">
              <%= post.title %>
              <span id="<%= post.id %>" onclick="showNews(this.id)">Read more ...</span>
            </h4>
          </div>
        </div>

        <div class="modal jumbotron align-items-center" id="block<%= post.id %>" data-modal="<%= post.id %>" onclick="closeNews(this.getAttribute('data-modal'))">
              <div class="news" id="news<%= post.id %>">
                  <iframe id="iframe<%= post.id %>" src="<%= post.content %>" style="height: 100%; width: 100%;"></iframe>
              </div>
        </div>

      <% end %>
    </div>
  </div>
  <hr>
</section>

<section class="contact" style="margin-top:50px;" id="contact">
  <h2>Contact</h2>
  <div class="customer-details">
    <%= form_for @contact, url: create_message_url do |f| %>
    <%= f.text_field :name, placeholder: "Name", class: "form-control" %><br>
    <%= f.text_field :phone, placeholder: "Mobile number", class: "form-control" %><br>
    <%= f.text_field :email, placeholder: "E-mail", class: "form-control" %><br>
    <%= f.text_area :message, placeholder: "Message...", class: "form-control" %><br>
    <div class:"actions">
      <%= f.submit "Send", class: "btn btn-block make-cake-btn"%>
    </div>
    <% end %>
  </div>
</section>
