<!-- Good example -->
<section class="featured" style="margin-top:50px">
  <h2>Featured in the media</h2>
  <% @posts = Post.all %>
  <div class="container">
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-4">
          <div class="post">
            <img class="card-img-top" src="<%= post.picture %>" alt="Card image cap" style="width:100%; height:200px;">
            <h4 class="card-title">
              <%= post.title %>
              <span><a href="#">Read more ...</a></span>
            </h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>
    <hr>
</section>

<section class="contact" style="margin-top:50px;" id="contact">
  <h2>Contact</h2>
  <div class="customer-details">
    <%= form_for @contact, url: create_message_url do |f| %>
    <%= f.text_field :name, placeholder: "Name", class: "form-control" %><br>
    <%= f.text_field :phone, placeholder: "Mobile number", class: "form-control" %><br>
    <%= f.text_field :email, placeholder: "E-mail", class: "form-control" %><br>
    <%= f.text_area :message, placeholder: "Message...", class: "form-control" %><br>
    <div class:"actions">
      <%= f.submit "Save", class: "btn btn-block make-cake-btn"%>
    </div>
    <% end %>
  </div>
</section>
